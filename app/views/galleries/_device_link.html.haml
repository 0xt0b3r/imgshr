.modal#device_link{tabindex: -1, role: 'dialog', aria: {hidden: true, labelledby: 'label_info'}}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: 'modal'}}
          %span{aria: {hidden: true}}
            &times;
          %span.sr-only Close
        %h4.modal-title#label_info Device link created!

      .modal-body.text-center
        %div
          %code.lead
            = device_link_url(@link)

        %div
          %strong Warning:
          This link is valid only once!

      .modal-footer
        %button.btn.btn-default{data: {dismiss: 'modal'}}
          = icon :ok
          OK
