#gallery{data: {slug: @gallery.slug}}
  = render 'header'

  - if @pictures.empty?
    = render 'empty_gallery'
  - else
    #pictures.col-xs-12{data: {endless: @gallery.endless_page}}
      #picture_grid
        = cache [@gallery, :show, @boss_token, params.hash] do
          .picture_group
            - @pictures.each_with_index do |picture, i|
              = render picture
              = picture_grid_break(i)
            .row

      .text-center
        = render 'pagination'
