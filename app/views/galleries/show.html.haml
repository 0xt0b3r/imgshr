.header
  .pull-right
    .btn-toolbar
      .btn-group
        = link_to root_path, class: 'btn btn-default' do
          = icon :upload
        = link_to root_path, class: 'btn btn-default' do
          = icon :trash
  .text-center
    - if @gallery.name
      %h2= best_in_place @gallery, :name
    - else
      %h2
        = @gallery.slug
        %small= best_in_place @gallery, :name

%ul
  - @gallery.pictures.in_groups_of(4, false).each do |group|
    .row
      - group.each do |picture|
        .col-xs-6.col-md-3
          = link_to picture.image.url, class: 'thumbnail' do
            = image_tag picture.image.url(:thumb)
