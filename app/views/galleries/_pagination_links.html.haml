- page = (params[:page] || 1).to_i

- unless @pictures.last_page?
  = link_to '← Older', gallery_path(@gallery, filter_params.merge(page: page + 1)), class: 'btn btn-default', rel: 'next'

- unless @pictures.first_page?
  = link_to 'Newer →', gallery_path(@gallery, filter_params.merge(page: page - 1)), class: 'btn btn-default'
