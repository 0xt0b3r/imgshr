.btn-toolbar
  .btn-group
    - if writable?
      = link_to '#', class: 'btn btn-default', data: { toggle: 'modal', target: '#upload' } do
        = icon :upload
    = link_to '#', class: 'btn btn-default', data: { toggle: 'modal', target: '#filter' } do
      = icon :filter
    = link_to '#', class: 'btn btn-default', data: { toggle: 'modal', target: '#info' } do
      - if @boss_token
        = icon :cog
      - else
        = icon :info_sign
    - if gallery.endless_page
      = link_to '#', class: 'btn btn-default', id: 'endless-toggle' do
        = icon :fast_forward, class: 'endless-toggle'
        %span.text Endless
    = link_to '#', id: 'toggle-fifty-percent', class: 'btn btn-default visible-xs' do
      = icon :zoom_out
      50%
    - if @boss_token
      = link_to '#', id: 'toggle-select', class: 'btn btn-default' do
        = icon :check
        Select

= render 'galleries/upload'
= render 'galleries/filter'
= render 'galleries/info'
