.btn-toolbar
  .btn-group
    - if writable?
      = link_to '#', class: 'btn', data: {toggle: 'modal', target: '#upload'} do
        = icon :upload
        Upload
    = link_to '#', class: 'btn', data: {toggle: 'modal', target: '#filter'} do
      = icon :filter
      Filter
    = link_to '#', class: 'btn', data: {toggle: 'modal', target: '#info'} do
      - if @boss_token
        = icon :cog
        Settings
      - else
        = icon :info_sign
        Info
    - if @boss_token
      = link_to '#', class: 'btn', data: {toggle: 'modal', target: '#temp_links'} do
        = icon :time
        Temporary Links
    - if gallery.endless_page
      = link_to '#', class: 'btn', id: 'endless-toggle' do
        = icon :fast_forward, class: 'endless-toggle'
        %span.text Endless
    = link_to '#', id: 'toggle-fifty-percent', class: 'btn visible-xs' do
      = icon :zoom_out
      50%

- if writable?
  = render 'galleries/upload'

= render 'galleries/filter'

= render 'galleries/info'

- if @boss_token
  = render 'galleries/temp_links'
