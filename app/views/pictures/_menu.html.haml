.btn-group
  %button.btn.btn-default.dropdown-toggle{data: {toggle: 'dropdown'}}
    %span.caret
  %ul.dropdown-menu{role: 'menu'}
    %li
      = link_to rails_blob_path(picture.image_file, disposition: 'attachment') do
        = icon :download
        Download
    %li
      = link_to picture_path(picture.image_fingerprint_short) do
        = icon :share
        Share without gallery
    %li
      = link_to temp_link_create_path(picture.gallery, picture), method: :post do
        = icon :time
        Share temporarily
    - if @boss_token
      %li
        = link_to gallery_picture_delete_path(@boss_token, picture), method: :delete, data: { confirm: 'Really delete?' } do
          = icon :trash
          Delete
