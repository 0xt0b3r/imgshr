%nav
  %ul.pager{data: {id: picture.id}}
    - if picture.previous_id
      %li.previous
        = link_to '#', data: {toggle: 'modal', target: "#lightbox#{picture.previous_id}"} do
          = icon :chevron_left
    - else
      %li.previous.disabled
        = icon :chevron_left

    - if picture.next_id
      %li.next
        = link_to '#', data: {toggle: 'modal', target: "#lightbox#{picture.next_id}"} do
          = icon :chevron_right
    - else
      %li.next.disabled
        = icon :chevron_right
